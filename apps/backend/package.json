{
    "name": "@acme/backend",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "with-env": "dotenv -e ../../.env --",
        "clean": "rm -rf node_modules",
        "build": "npx tsc",
        "tsc:watch": "tsc --watch",
        "dev2": "concurrently \"pnpm tsc --watch\" \"nodemon -q index.ts\"",
        "dev3": "nodemon -q index.ts",
        "dev": "tsx watch ./index.ts",
        "lint": "next lint",
        "type-check": "tsc --noEmit"
    },
    "dependencies": {
        "dotenv": "^16.3.1",
        "express": "^4.18.2"
    },
    "devDependencies": {
        "@types/express": "^4.17.17",
        "@types/node": "^18.0.0",
        "concurrently": "^8.2.0",
        "nodemon": "^3.0.1",
        "ts-node": "^10.9.1",
        "tsx": "^3.12.7",
        "typescript": "^4.9.3"
    }
}